    <%= form.label :manager_id %>
    <%= form.select :manager_id, options_for_select(@options_for_manager) %>
  </div>

  <div class="form-group">
    <%= form.label :stars %>
    <%= form.text_field :stars %>
  </div>

  <div class="form-group">
    <%= form.label :street_address %>
    <%= form.text_field :street_address %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country,  class:"form-control-input"%>
  </div>

  <div class="form-group">
    <%= form.label :pincode %>
    <%= form.text_field :pincode %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
