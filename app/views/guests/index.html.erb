<p id="notice"><%= notice %></p>

<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Branch</th>
      <th>R no</th>
      <th>Check in</th>
      <th>Check out</th>
      <th>Billed amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.member_id %></td>
        <td><%= guest.branch_id %></td>
        <td><%= guest.r_no %></td>
        <td><%= guest.check_in %></td>
        <td><%= guest.check_out %></td>
        <td><%= guest.billed_amount %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

