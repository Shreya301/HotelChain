
<%= simple_form_for(@monthly_expense) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :financial_month, start_year: 100.years.ago.year, end_year: Date.today.year %>
    <%= f.input :electricity_bill %>
    <%= f.input :water_bill %>
    <%= f.select :branch_id, @branch_choices%>
    <%= f.input :monthly_turnover %>
    <%= f.input :monthly_profit %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
